<div class="timeline">
  <ul>
    <% @talks.each do |talk| %>
    <li>
      <%= talk.content %>
      <%= link_to "delete", talks_path(id: talk.id), method: :delete %>
    </li>
    <% end %>
  </ul>
</div>

<div id="form-wrapper">
  <%= form_with model: Talk.new, local: true do |form| %>
    <div class="form">
      <i class="fas fa-pen"></i>
      <%= form.text_area :content, class: 'content' %>
      <%= button_tag "Send", class: 'send-button' %>
    </div>
  <% end %>
</div>
